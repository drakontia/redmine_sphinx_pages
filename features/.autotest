if RUBY_PLATFORM.downcase.include?("darwin")
  require "autotest/growl"
  require 'autotest/fsevent'
end
require 'redgreen/autotest'

Autotest.add_hook :initialize do |at|
  %w{.git .DS_Store test assets}.each { |exception| at.add_exception(exception) }
  at.remove_exception 'vendor/plugins'
  at.find_directories << 'vendor/plugins/redmine_sphinx_pages'
  at.libs << 'vendor/plugins/redmine_sphinx_pages/features'
  at.libs << 'vendor/plugins/redmine_sphinx_pages/lib'
  false
end

Autotest.add_hook :all_good do |at|
  system "rake redmine:sphinx_pages:rcov"
  false
end
